@model AdminTool.Models.AdminUser

<div class="container">
    <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <form class="form-horizontal" method="post" asp-controller="Admin" asp-action="Register">
            <div class="form-group">
                <label>계정 아이디</label>
                <input type="text" class="form-control" id="AccountID" asp-for="Username" placeholder="User ID" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label>계정 비밀번호</label>
                <input type="password" class="form-control" id="AccountPW" asp-for="Password" placeholder="User Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label><a asp-area="" asp-controller="Admin" asp-action="Login">로그인 화면으로 돌아가기</a></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-signin">회원가입</button>
            </div>
        </form>
    </div>
</div>